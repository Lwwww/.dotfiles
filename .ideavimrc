set ignorecase
set clipboard+=unnamed
set keep-english-in-normal-and-restore-in-insert

# plugins
set surround
set commentary
set multiple-cursors
set argtextobj
set textobj-entire
set ReplaceWithRegister
set highlightedyank
set exchange
set ideajoin
set ideamarks

" 按键映射
let mapleader=","

vmap < <gv
vmap > >gv

" tab页
map <leader>tn :tabnew<cr>
nnoremap <silent> <leader>th :tabprev<cr>
nnoremap <silent> <leader>tl :tabnext<cr>
nnoremap <silent> <leader>1 1gt
nnoremap <silent> <leader>2 2gt
nnoremap <silent> <leader>3 3gt
nnoremap <silent> <leader>4 4gt
nnoremap <silent> <leader>5 5gt
nnoremap <silent> <leader>6 6gt
nnoremap <silent> <leader>7 7gt
nnoremap <silent> <leader>8 8gt
nnoremap <silent> <leader>9 9gt

map <leader>e :action ActivateProjectToolWindow<CR>
map <leader>r :action Replace<CR>
map <leader>f :action Find<CR>
map <leader>t :action ReopenClosedTab<CR>
map <leader>q :action CloseContent<CR>
map <leader>i :action Inline<CR>
map <leader>s :action $EditorTranslateAction<CR>
map <leader>u :action GotoSuperMethod<CR>
map <leader>n :action GotoImplementation<CR>

# windows multiple0-cursors key maps
nmap <c-n> <A-n>
nmap <c-x> <A-x>
nmap <c-p> <A-p>
vmap <c-n> <A-n>
vmap <c-x> <A-x>
vmap <c-p> <A-p>

# mac multiple0-cursors key maps
nmap <m-n> <A-n>
nmap <m-x> <A-x>
nmap <m-p> <A-p>
vmap <m-n> <A-n>
vmap <m-x> <A-x>
vmap <m-p> <A-p>

# history
nmap <c-o> :action Back<CR>
nmap <c-i> :action Forward<CR>

nmap <tab> <c-w>
