" vundle相关设置 {{{
set nocompatible "去除VIM一致性，必须
filetype off

" 设置包括vundle和初始化相关的运行时路径
if has("win32")
  set rtp+=$HOME/vimfiles/bundle/Vundle.vim
else
  set rtp+=$HOME/.vim/bundle/Vundle.vim
endif

call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'vim-airline'
Plugin 'tpope/vim-surround'
Plugin 'Raimondi/delimitMate'
Plugin 'preservim/nerdtree'
Plugin 'tpope/vim-commentary'
Plugin 'joshdick/onedark.vim'
Plugin 'airblade/vim-gitgutter'

" themes
Plugin 'rakr/vim-one'
Plugin 'dracula/vim'

call vundle#end()
filetype plugin indent on "加载vim自带和插件相应的语法和文件类型相关脚本，必须
" }}}

" 常规设置 {{{
set hlsearch " 高亮搜索结果
set ignorecase " 搜索时忽略大小写
set incsearch " 每输入一个字符就跳转到对应的结果
set noerrorbells " 关闭错误响声
set clipboard+=unnamed " 使用系统剪切板
set splitbelow " 默认在下侧分屏
set t_Co=256 " 开启256颜色支持
set autoindent
set number
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4
set encoding=utf8
set fileencoding=utf-8
set fileencodings=ucs-bom,utf-8,utf-16,gbk,big5,gb18030,latin1
syntax on
set fdm=marker " 使用marker折叠
set foldlevelstart=99 " 打开文件默认不折叠
" }}}

" airline {{{
set laststatus=2
set ambiwidth=double
" let g:airline_powerline_fonts=1
let g:airline_left_sep = ''
let g:airline_left_sep = ''
let g:airline_right_sep = ''
let g:airline_right_sep = ''
" }}}

" gitgutter {{{
set updatetime=100 " 设置vim更新时间，主要用于更新gitgutter
let g:gitgutter_max_signs = 2000 " diff signs的最大行数
" }}}

" 按键映射 {{{
  let mapleader=" " " 设置空格键为leader
  nnoremap <silent> <leader>e :NERDTreeToggle<CR>
  nnoremap <silent> <leader>f :NERDTreeFind<CR>
" }}}

" 光标设置 {{{
" https://vim.fandom.com/wiki/Configuring_the_cursor
" 1 or 0 -> blinking block
" 2 solid block
" 3 -> blinking underscore
" 4 solid underscore
" Recent versions of xterm (282 or above) also support
" 5 -> blinking vertical bar
" 6 -> solid vertical bar

if &term =~ '^xterm'
  " normal mode
  let &t_EI .= "\<Esc>[8 q"
  " insert mode
  let &t_SI .= "\<Esc>[6 q"
endif
" }}}

" gVim {{{
if has("gui_running")
  " au GUIEnter * simalt ~x " 窗口启动时自动最大化
  set guioptions-=m " 隐藏菜单栏
  set guioptions-=T " 隐藏工具栏
  set guioptions-=L " 隐藏左侧滚动条
  set guioptions-=r " 隐藏右侧滚动条
  set guioptions-=b " 隐藏底部滚动条
  set lines=33
  set columns=110
  winpos 440 200
  " Windows下使用wsl作为默认终端
  " if has("win32")
  "   set shell=C:\Windows\Sysnative\wsl.exe
  "   set shellpipe=|
  "   set shellredir=>
  "   set shellcmdflag=
  " endif
endif
" }}}

" 主题配置 {{{
set guifont=consolas:h13
colorscheme one
set bg=dark
" }}}
